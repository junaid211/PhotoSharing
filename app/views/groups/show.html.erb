<h3>Group created ! Smile</h3>

<%#= button_to 'Add People' , list_groups_path ,:class=>"button_blue"%>

<p><%= button_to 'Home' , users_path , :class=>"button_blue"%></p>


<% if @users.blank? %>
    <p>There are not any users currently in the system.</p>
<% else %>
    <p>These are the current users you can add </p>
    <ul id="users">
      <% @users.each do |c| %>
          <li><p><%= c.name -%></p></li>
          <%= link_to "Add",add_user_group_path(c) , :remote => true %>
      <% end %>
    </ul>
<% end %>